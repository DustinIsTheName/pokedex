<div class="custom-field-form">	
	<div class="input-row rows">
		<label for="rows">Rows:</label>
		<input type="number" id="rows" value="10" name="rows">
	</div>
	<div class="input-row columns">
		<label for="columns">Columns:</label>
		<input type="number" id="columns" value="10" name="columns">
	</div>
	<div class="input-row mines">
		<label for="mines">Mines:</label>
		<input type="number" id="mines" value="15" name="mines">
	</div>
	<input type="submit" id="changeField" value="Change Field">
</div>

<div class="status-bar">
	<div class="status-cell">
		<div class="reset-fire"></div>
	</div>
	<div class="status-cell">
		<div class="flag-trigger"></div>
	</div>
	<div class="status-cell">
		<div class="mine-count">15 REMAIN</div>
	</div>
</div>

<div class="mine-field">
  <div class="mine-field-inner">
  	<% for i in 1..100 %>
	  	<div class="mine"><div class="inner"></div></div>
  	<% end %>
  </div>
</div>

<div class="status-bar">
	<div class="status-cell">
		<div class="reset-fire"></div>
	</div>
	<div class="status-cell">
		<div class="flag-trigger"></div>
	</div>
	<div class="status-cell">
		<div class="mine-count">15 REMAIN</div>
	</div>
</div>